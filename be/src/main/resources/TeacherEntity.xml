<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.backend.entity.TeacherEntity">
        <table name="teacher" schema="self_education" catalog=""/>
        <attributes>
            <id name="idTeacher">
                <column name="id_teacher"/>
            </id>
            <basic name="idUser">
                <column name="id_user"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="surname">
                <column name="surname"/>
            </basic>
            <basic name="idSubject">
                <column name="id_subject"/>
            </basic>
            <many-to-one name="userByIdUser" optional="true" target-entity="com.backend.entity.UserEntity">
                <join-column name="id_user" referenced-column-name="id_user"/>
            </many-to-one>
            <many-to-one name="subjectByIdSubject" optional="true" target-entity="com.backend.entity.SubjectEntity">
                <join-column name="id_subject" referenced-column-name="id_subject"/>
            </many-to-one>
            <one-to-many name="productsByIdTeacher" mapped-by="teacherByIdTeacher"
                         target-entity="com.backend.entity.ProductEntity"/>
            <one-to-many name="teacherStudentsByIdTeacher" mapped-by="teacherByIdTeacher"
                         target-entity="com.backend.entity.TeacherStudentEntity"/>
        </attributes>
    </entity>
</entity-mappings>
