<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.backend.entity.UserEntity">
        <table name="user" schema="self_education" catalog=""/>
        <attributes>
            <id name="idUser">
                <column name="id_user"/>
            </id>
            <basic name="login">
                <column name="login"/>
            </basic>
            <basic name="password">
                <column name="password"/>
            </basic>
            <basic name="role">
                <column name="role"/>
            </basic>
            <one-to-many name="studentsByIdUser" mapped-by="userByIdUser"
                         target-entity="com.backend.entity.StudentEntity"/>
            <one-to-many name="teachersByIdUser" mapped-by="userByIdUser"
                         target-entity="com.backend.entity.TeacherEntity"/>
        </attributes>
    </entity>
</entity-mappings>
