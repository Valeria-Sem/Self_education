<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.backend.entity.ProductEntity">
        <table name="product" schema="self_education" catalog=""/>
        <attributes>
            <id name="idProduct">
                <column name="id_product"/>
            </id>
            <basic name="idTeacher">
                <column name="id_teacher"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="description">
                <column name="description"/>
            </basic>
            <basic name="price">
                <column name="price"/>
            </basic>
            <basic name="idSubject">
                <column name="id_subject"/>
            </basic>
            <basic name="img">
                <column name="img"/>
            </basic>
            <many-to-one name="teacherByIdTeacher" optional="true" target-entity="com.backend.entity.TeacherEntity">
                <join-column name="id_teacher" referenced-column-name="id_teacher"/>
            </many-to-one>
            <many-to-one name="subjectByIdSubject" optional="true" target-entity="com.backend.entity.SubjectEntity">
                <join-column name="id_subject" referenced-column-name="id_subject"/>
            </many-to-one>
            <one-to-many name="subscriptionsByIdProduct" mapped-by="productByIdProduct"
                         target-entity="com.backend.entity.SubscriptionEntity"/>
        </attributes>
    </entity>
</entity-mappings>
