<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
        version="2.0">

    <entity class="com.backend.entity.StudentEntity">
        <table name="student" schema="self_education" catalog=""/>
        <attributes>
            <id name="idStudent">
                <column name="id_student"/>
            </id>
            <basic name="idUser">
                <column name="id_user"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="surname">
                <column name="surname"/>
            </basic>
            <basic name="group">
                <column name="group"/>
            </basic>
            <basic name="idWallet">
                <column name="id_wallet"/>
            </basic>
            <many-to-one name="userByIdUser" optional="true" target-entity="com.backend.entity.UserEntity">
                <join-column name="id_user" referenced-column-name="id_user"/>
            </many-to-one>
            <many-to-one name="walletByIdWallet" optional="true" target-entity="com.backend.entity.WalletEntity">
                <join-column name="id_wallet" referenced-column-name="id_wallet"/>
            </many-to-one>
            <one-to-many name="subscriptionsByIdStudent" mapped-by="studentByIdStudent"
                         target-entity="com.backend.entity.SubscriptionEntity"/>
            <one-to-many name="teacherStudentsByIdStudent" mapped-by="studentByIdStudent"
                         target-entity="com.backend.entity.TeacherStudentEntity"/>
        </attributes>
    </entity>
</entity-mappings>
